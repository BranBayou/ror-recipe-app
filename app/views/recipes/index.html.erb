<div>
  <h1>Recipes</h1>

  <%= link_to 'New Recipe', new_recipe_path, class: 'new-recipe-button' %>

      <% @recipes.each do |recipe| %>
     
          <%= link_to recipe.name, recipe %>
          Description: <%= recipe.description %>
          
            <% if can?(:destroy, recipe) %>
              <%= button_to "Remove",
                            recipe,
                            method: :delete,
                            title: "Delete recipe",
                            class: "delete" %>
            <% end %>
          

      <% end %>


</div>
